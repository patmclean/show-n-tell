{
    "python.pythonPath": "/usr/local/bin/python",
    "python.linting.pycodestyleEnabled": true,    
    "python.linting.enabled": true,
    "python.linting.pylintArgs": ["--disable-msg", "no-member"],
    "files.associations": {
        "**/*.html": "html",
        "**/*.yml": "ansible",
    },
    "[html]": {
        "editor.defaultFormatter": "HookyQR.beautify"
    },
    "ansible.credentialsFile": "/ansible/.devcontainer/ansible-credentials.yml",
}
